# TechForge AI Agent Suite - Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=TechForge AI Agent Suite
APP_VERSION=2.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_KEY=your-api-key-here
API_SECRET=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/techforge_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# License Management
LICENSE_SERVER_URL=https://license.techforge.ai
LICENSE_VALIDATION_INTERVAL=3600

# Agent Configuration
AGENT_TIMEOUT_SECONDS=300
AGENT_MAX_CONCURRENT=5
AGENT_RETRY_ATTEMPTS=3
AGENT_HEALTH_CHECK_INTERVAL=60

# AI Provider Settings
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET_NAME=techforge-agents
STORAGE_TYPE=local

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ENDPOINT=https://analytics.techforge.ai
TELEMETRY_ENABLED=true
METRICS_PORT=9090

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@techforge.ai
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=TechForge AI <noreply@techforge.ai>

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL_ALERTS=#techforge-alerts

# GitHub Integration
GITHUB_TOKEN=ghp_your-github-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
RATE_LIMIT_BURST=20

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,techforge.ai
SECURE_HEADERS_ENABLED=true
SSL_REDIRECT=false

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
PAYMENT_SUCCESS_URL=https://app.techforge.ai/success
PAYMENT_CANCEL_URL=https://app.techforge.ai/cancel

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_TEAM_COLLABORATION=true
FEATURE_CUSTOM_AGENTS=false
FEATURE_ENTERPRISE_SSO=false

# Development Tools
HOT_RELOAD=true
PROFILING_ENABLED=false
SQL_ECHO=false